{
    "python.terminal.activateEnvInCurrentTerminal": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    "editor.rulers": [
        140
    ],
    "autopep8.args": [
        "--max-line-length",
        "140"
    ],
    "flake8.args": [
        "--max-line-length",
        "140"
    ],
    "isort.args": [
        "--line-length",
        "140"
    ],
    "python.analysis.ignore": [
        "mock_folder/",
        "mock_apis/"
    ],
    "python.analysis.exclude": [
        "./mock_folder/*",
        "./mock_api/*"
    ],
    "files.exclude": {
        "**/__pycache__": true
    },
    "search.exclude": {
        "**/__pycache__": true
    },
    "files.associations": {
        ".env*": "dotenv"
    },
    "cSpell.userWords": [
        "boto",
        "cqlengine",
        "cstmr",
        "firestore",
        "followupreminder",
        "fullfilled",
        "genericactivity",
        "gstin",
        "Karza",
        "keyspace",
        "keyspaces",
        "KSMQ",
        "leadmanagement",
        "opensearchpy",
        "orgbeat",
        "orgbeatdayplancustomer",
        "Pincode",
        "ppgm",
        "reimbursementtracker",
        "Rupyz",
        "shorturl",
        "UNLOGGED",
        "Whatspp",
        "wobj"
    ],
    "notebook.lineNumbers": "on",
}