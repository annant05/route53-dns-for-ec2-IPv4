    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger:Container Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "django": true,
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Python Debugger:Local Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "0.0.0.0:8080"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/dev.env",
            "justMyCode": true
        },
        {
            "name": "Python: Current File AD-HOC",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}